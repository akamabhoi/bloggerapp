<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:background="#E7DFDF">


        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ToolbarTheme">
            <FrameLayout

                android:id="@+id/toolbar_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <com.miguelcatalan.materialsearchview.MaterialSearchView
                    android:layout_width="match_parent"
                    android:id="@+id/mysearch"
                    android:layout_height="wrap_content" />

            </FrameLayout>

        </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_search" />




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/hg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10sp"
        android:background="@drawable/ab"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/r2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/jj"
            android:layout_marginLeft="42dp"
            android:padding="14dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ii"
                android:layout_marginBottom="5dp"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aayush"
            android:layout_below="@+id/r2"
            android:layout_marginLeft="60dp"
            android:textAllCaps="true"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:textAllCaps="true"
            android:id="@+id/tv"
            android:layout_below="@+id/rl"
            android:layout_marginBottom="20sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"/>

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/jj"
            android:layout_marginRight="42dp"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="30sp" />
        </RelativeLayout>

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hg">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="15dp">

                    <LinearLayout
                        android:layout_weight="0.5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/pptlayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/abb"
                            android:orientation="vertical" >
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/pptt"
                                android:layout_gravity="center"
                                android:layout_marginTop="40dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PPT Generator"
                                android:textAllCaps="true"
                                android:textColor="#8D8888"
                                android:textSize="12sp"
                                android:layout_marginTop="20dp"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/summary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/c"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="80dp"
                                android:src="@drawable/summ"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Summary"
                                android:textColor="#8D8888"
                                android:textSize="12sp"
                                android:textAllCaps="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="10sp"/>
                        </LinearLayout>




                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="0.5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/herukulayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/c"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="80dp"
                                android:src="@drawable/fillup"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fill up"
                                android:textColor="#8D8888"
                                android:textSize="12sp"
                                android:textAllCaps="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="10sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/discovery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/abb"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="40dp"
                                android:src="@drawable/ques" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:text="Q &amp; A"
                                android:textColor="#8D8888"
                                android:textSize="12sp" />
                        </LinearLayout>


                    </LinearLayout>



                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rly">
                    <HorizontalScrollView
                        android:id="@+id/rvPopularFood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                android:layout_width="250dp"
                                android:layout_height="180dp"
                                android:layout_margin="20dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="3dp"
                                android:background="@drawable/d">
                                <RelativeLayout
                                    android:id="@+id/chat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/help"/>
                                    <View
                                        android:id="@+id/nview1"
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:background="@color/colorBlackT"
                                        android:layout_alignBottom="@+id/ntvOrder1"
                                        android:layout_alignTop="@+id/ntvOrder1"/>

                                    <TextView
                                        android:id="@+id/ntvOrder1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_above="@+id/ntvNameFood1"
                                        android:padding="5dp"
                                        android:text="Trending"
                                        android:textSize="12sp"
                                        android:textColor="#c8ffffff"/>

                                    <TextView
                                        android:id="@+id/ntvNameFood1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:padding="5dp"
                                        android:text="Ask Doubt Section"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="#707070"/>

                                    <TextView
                                        android:id="@+id/ntvPrice1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentRight="true"
                                        android:padding="5dp"
                                        android:text="5K"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorBrown"/>
                                </RelativeLayout>
                            </android.support.v7.widget.CardView>
                            <android.support.v7.widget.CardView
                                android:layout_width="250dp"
                                android:layout_height="180dp"
                                android:layout_margin="20dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="3dp"
                                android:background="@drawable/d">
                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/klllll"/>
                                    <View
                                        android:id="@+id/nview12"
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:background="@color/colorBlackT"
                                        android:layout_alignBottom="@+id/ntvOrder12"
                                        android:layout_alignTop="@+id/ntvOrder12"/>

                                    <TextView
                                        android:id="@+id/ntvOrder12"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_above="@+id/ntvNameFood12"
                                        android:padding="5dp"
                                        android:text="Trending"
                                        android:textSize="12sp"
                                        android:textColor="#c8ffffff"/>

                                    <TextView
                                        android:id="@+id/ntvNameFood12"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:padding="5dp"
                                        android:text="Practice Section"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="#707070"/>

                                    <TextView
                                        android:id="@+id/ntvPrice12"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentRight="true"
                                        android:padding="5dp"
                                        android:text="5K"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorBrown"/>
                                </RelativeLayout>
                            </android.support.v7.widget.CardView>
                            <android.support.v7.widget.CardView
                                android:layout_width="250dp"
                                android:layout_height="180dp"
                                android:layout_margin="20dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="3dp"
                                android:background="@drawable/d">
                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/practi"/>
                                    <View
                                        android:id="@+id/nview13"
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:background="@color/colorBlackT"
                                        android:layout_alignBottom="@+id/ntvOrder13"
                                        android:layout_alignTop="@+id/ntvOrder13"/>

                                    <TextView
                                        android:id="@+id/ntvOrder13"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_above="@+id/ntvNameFood13"
                                        android:padding="5dp"
                                        android:text="100 Order"
                                        android:textSize="12sp"
                                        android:textColor="#c8ffffff"/>

                                    <TextView
                                        android:id="@+id/ntvNameFood13"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:padding="5dp"
                                        android:text="Name Food"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="#707070"/>

                                    <TextView
                                        android:id="@+id/ntvPrice13"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentRight="true"
                                        android:padding="5dp"
                                        android:text="5K"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorBrown"/>
                                </RelativeLayout>
                            </android.support.v7.widget.CardView>



                        </LinearLayout>


                    </HorizontalScrollView>

                </RelativeLayout>








            </LinearLayout>











    </RelativeLayout>

    </RelativeLayout>

</ScrollView>





















</RelativeLayout>


